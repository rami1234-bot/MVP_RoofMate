<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/universityIdEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="University ID Number" />

    <ImageView
        android:id="@+id/universityPictureImageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/universityIdEditText"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/selectImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:layout_below="@id/universityPictureImageView"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/universityNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="University Name"
        android:layout_below="@id/selectImageButton"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_below="@id/universityNameEditText"
        android:layout_marginTop="16dp" />
</RelativeLayout>
